# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
tls_starttls   on
logfile        ~/.msmtp.log

# Gmail
account        Gmail
host           smtp.gmail.com
port           587
from           felipebrokate@gmail.com
user           felipebrokate@gmail.com
passwordeval  "pass Mail/Gmail"

# Chimie
account        Chimie
host           smtp.chimie-paristech.fr
port           587
from	       cristian.perez-brokate@chimie-paristech.fr
user	       cristian.perez-brokate@chimie-paristech.fr
passwordeval  "pass Mail/Chimie"

# Kernix
