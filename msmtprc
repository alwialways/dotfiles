# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /usr/local/etc/openssl/cert.pem
tls_starttls   on
logfile        ~/.msmtp.log

# Gmail
account        Gmail
host           smtp.gmail.com
port           587
from           felipebrokate@gmail.com
user           felipebrokate@gmail.com
passwordeval  "pass Mail/Gmail"

# Kernix
account        Kernix
host           smtp.gmail.com
port           587
from           cperez@kernix.com
user           cperez@kernix.com
passwordeval  "pass Mail/Kernix"

# Outlook
account        Outlook
host           smtp-mail.outlook.com
port           587
from           cristian_brokate@hotmail.com
user           cristian_brokate@hotmail.com
passwordeval  "pass Mail/Gmail"

# Set a default account
account default : Outlook

