[Repository Gmail-Local]
#'trash':    '[Gmail]/Trash',
type = Maildir
localfolders = ~/Mail/Gmail
nametrans = lambda folder: {'Drafts':   '[Gmail]/Drafts',
                            'Sent':     '[Gmail]/Sent Mail',
                            'Trash':    '[Gmail]/Trash',
                            'Important':'[Gmail]/Important',
                            'Spam':     '[Gmail]/Spam',
                            'Starred':  '[Gmail]/Starred',
                            'Archive':  '[Gmail]/All Mail',
                            }.get(folder, folder)

[Repository Kernix-Local]
type = Maildir
localfolders = ~/Mail/Kernix
nametrans = lambda folder: {'Drafts':   '[Gmail]/Brouillons',
                            'Sent':     '[Gmail]/Messages envoy&AOk-s',
                            'Trash':    '[Gmail]/Corbeille',
                            'Important':'[Gmail]/Important',
                            'Spam':     '[Gmail]/Spam',
                            'Follow':   '[Gmail]/Suivis',
                            'Archive':  '[Gmail]/Tous les messages',
                            }.get(folder, folder)

[Repository Gmail-Remote]
type = Gmail
remoteuser = felipebrokate@gmail.com
remotepasseval = get_pass("Gmail")
folderfilter = lambda foldername: foldername not in ['[Gmail]/All Mail']
nametrans = lambda folder: {'[Gmail]/Drafts':    'Drafts',
                            '[Gmail]/Sent Mail': 'Sent',
                            '[Gmail]/Trash': 'Trash',
                            '[Gmail]/Important':   'Important',
                            '[Gmail]/Spam':   'Spam',
                            '[Gmail]/Starred':   'Starred',
                            '[Gmail]/All Mail':  'Archive',
                            }.get(folder, folder)
#'[Gmail]/Trash':     'trash',
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
#keepalive = 60
#holdconnectionopen = yes
auth_mechanisms = GSSAPI, CRAM-MD5, XOAUTH2, PLAIN, LOGIN
oauth2_client_id_eval = get_oauth2_client_id('Gmail')
oauth2_client_secret_eval = get_oauth2_client_secret('Gmail')
#oauth2_request_url = https://accounts.google.com/o/oauth2/token
oauth2_refresh_token_eval = get_oauth2_refresh_token('Gmail')

[Repository Kernix-Remote]
type = Gmail
remoteuser = cperez@kernix.com
remotepasseval = get_pass("Kernix")
folderfilter = lambda foldername: foldername not in ['[Gmail]/Tous les messages']
nametrans = lambda folder: {'[Gmail]/Brouillons':    'Drafts',
                            '[Gmail]/Messages envoy&AOk-s': 'Sent',
                            '[Gmail]/Suivis':   'Follow',
                            '[Gmail]/Important':   'Important',
                            '[Gmail]/Spam':   'Spam',
                            '[Gmail]/Corbeille':     'Trash',
                            '[Gmail]/Tous les messages':  'Archive',
                            }.get(folder, folder)
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
